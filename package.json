{
  "name": "identicons-esm-monorepo",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.9.0",
  "description": "A rewrite of the Identicon module with ESM",
  "license": "MIT",
  "homepage": "https://github.com/onmax/nimiq-identicons#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onmax/nimiq-identicons.git"
  },
  "bugs": {
    "url": "https://github.com/onmax/nimiq-identicons/issues"
  },
  "keywords": [],
  "sideEffects": false,
  "scripts": {
    "build": "nr -r build",
    "dev": "nr optimize-svg && nr play",
    "optimize-svg": "pnpm -C packages/nimiq-identicons run optimize-svg",
    "play": "pnpm -r -C playground run dev",
    "lint": "eslint --cache .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp -r --push --no-push-all",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@nimiq/utils": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@antfu/ni": "catalog:",
    "@antfu/utils": "catalog:",
    "@types/node": "catalog:",
    "bumpp": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "pathe": "catalog:",
    "pnpm": "catalog:",
    "simple-git-hooks": "catalog:",
    "typescript": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix ."
  },
  "directories": {
    "test": "test"
  }
}
